{
    "name": "hiblaphp/pdo-query-builder",
    "description": "Framework Agnostic Asynchonous Query Builder",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Hibla\\PdoQueryBuilder\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.2",
        "hiblaphp/event-loop": "dev-main",
        "hiblaphp/promise": "dev-main",
        "hiblaphp/async": "dev-main",
        "hiblaphp/async-pdo": "dev-main",
        "hiblaphp/postgres": "dev-main",
        "rcalicdan/query-builder-primitives": "dev-main",
        "ext-pdo": "*",
        "symfony/console": "^7.3",
        "doctrine/inflector": "^2.1",
        "nesbot/carbon": "^3.10",
        "rcalicdan/config-loader": "^1.0"
    },
    "require-dev": {
        "laravel/pint": "^1.10",
        "pestphp/pest": "^3.0",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-strict-rules": "^2.0",
        "hiblaphp/task": "dev-main"
    },
    "bin": [
        "bin/pdo-query-builder"
    ],
    "scripts": {
        "post-install-cmd": [
            "@php -r \"if (!is_dir('config')) { echo '\\nRun: ./vendor/bin/pdo-query-builder init\\n\\n'; }\""
        ],
        "post-update-cmd": [
            "@php -r \"if (!is_dir('config')) { echo '\\nRun: ./vendor/bin/pdo-query-builder init\\n\\n'; }\""
        ],
        "test": "./vendor/bin/pest",
        "test:unit": "./vendor/bin/pest tests/Unit",
        "test:integration": "./vendor/bin/pest tests/Integration",
        "format": "./vendor/bin/pint",
        "format-test": "./vendor/bin/pint --test",
        "analyze": "./vendor/bin/phpstan analyse"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
