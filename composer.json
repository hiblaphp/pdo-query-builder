{
    "name": "hiblaphp/pdo-query-builder",
    "description": "Framework Agnostic Asynchonous Query Builder",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Hibla\\PdoQueryBuilder\\": "src/"
        }
    },
    "require": {
        "php": "^8.2",
        "hiblaphp/event-loop": "dev-main",
        "hiblaphp/promise": "dev-main",
        "hiblaphp/async": "dev-main",
        "hiblaphp/async-pdo": "dev-main",
        "rcalicdan/query-builder-primitives": "dev-main",
        "ext-pdo": "*",
        "symfony/console": "^7.3"
    },
    "bin": [
        "bin/pdo-query-builder"
    ],
    "scripts": {
        "post-install-cmd": [
            "@php -r \"if (!is_dir('config')) { echo '\\nRun: ./vendor/bin/pdo-query-builder init\\n\\n'; }\""
        ],
        "post-update-cmd": [
            "@php -r \"if (!is_dir('config')) { echo '\\nRun: ./vendor/bin/pdo-query-builder init\\n\\n'; }\""
        ]
    }
}