<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd" bootstrap="vendor/autoload.php" colors="true">
    <testsuites>
        <testsuite name="Test Suite">
            <directory suffix="Test.php">./tests</directory>
        </testsuite>
    </testsuites>
    <source>
        <include>
            <directory>src</directory>
        </include>
    </source>
    <php>
        <!-- MySQL -->
        <env name="MYSQL_HOST" value="127.0.0.1" force="true"/>
        <env name="MYSQL_PORT" value="3306" force="true"/>
        <env name="MYSQL_DATABASE" value="test_db" force="true"/>
        <env name="MYSQL_USERNAME" value="test_user" force="true"/>
        <env name="MYSQL_PASSWORD" value="test_password" force="true"/>

        <!-- PostgreSQL -->
        <env name="PGSQL_HOST" value="127.0.0.1" force="true"/>
        <env name="PGSQL_PORT" value="5443" force="true"/>
        <env name="PGSQL_DATABASE" value="test_db" force="true"/>
        <env name="PGSQL_USERNAME" value="postgres" force="true"/>
        <env name="PGSQL_PASSWORD" value="postgres" force="true"/>

        <!-- SQLite -->
        <env name="SQLITE_DATABASE" value="file::memory:?cache=shared" force="true"/>

        <!-- SQL Server -->
        <env name="SQLSRV_HOST" value="127.0.0.1" force="true"/>
        <env name="SQLSRV_PORT" value="1433" force="true"/>
        <env name="SQLSRV_DATABASE" value="test_db" force="true"/>
        <env name="SQLSRV_USERNAME" value="sa" force="true"/>
        <env name="SQLSRV_PASSWORD" value="Testpassword123@" force="true"/>
    </php>
</phpunit>